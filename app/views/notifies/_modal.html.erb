
<div id="form_modal" class="modal hide fade " tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <%= simple_form_for @notify, html: {class: "notify"} do |f| %>
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
      <h3 id="myModalLabel">Notify Person</h3>
    </div>
    <div class="modal-body">
      <div class="control-group">
        <%= f.input_field :name, placeholder: 'Full Name', class: "input-block-level" %>
      </div>

      <div class="control-group">
        <%= f.input_field :email, placeholder: 'Email Address', class: "input-block-level" %>
      </div>

      <div class="control-group">
        <%= f.input_field :message, type: "textarea",  placeholder: 'Message', size: "3x5", class: "input-block-level" %>
      </div>

      <div class="control-group" id="notify_status" style="display:none;">
        <%= f.label :active %>
        <%= f.input_field :active, type: "checkbox", class: "input-block-level", checked: true, label: "Acitve" %>
      </div>

    </div>
    <div class="modal-footer">
      <a href="#"  data-dismiss="modal" class="btn">Close</a>
      <%= f.submit "Save to Notify", class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
